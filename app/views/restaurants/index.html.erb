<h1 class="text-center mt-4">Restaurants</h1>
<div class="row d-flex justify-content-center gap-2 bg-light p-5 mt-4 ms-5 me-5 rounded border border-light shadow-sm">
<div class="d-flex alert alert-primary w-50">
  <ul class="list-unstyled w-100">
    <% @restaurants.each do |restaurant| %>
      <li class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center pb-3 border-bottom shadow">
          <div class="d-flex justify-content center">
            <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-light fs-4" %>
          </div>
          <div>
            
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<div class="d-flex justify-content-center w-50">
<span class="btn btn-primary btn-lg w-75" ><%= link_to "add restaurant", new_restaurant_path %></span>
</div>


</div>